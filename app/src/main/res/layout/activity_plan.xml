<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.StepOne">
    <include layout="@layout/netflix_step_one_toolbar"
        android:id="@+id/toolbarID_step_one"
        />
    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="100sp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Choose a feasible plan for you"
            android:textSize="18sp"
            android:gravity="center"
            android:textStyle="bold"
            />
         <TextView
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:textSize="18sp"
             android:gravity="center"
             android:text="@string/description_plan_activity"/>

            <androidx.cardview.widget.CardView
             android:layout_width="match_parent"
             android:layout_height="250sp"
             android:layout_margin="12sp"
             app:cardCornerRadius="15sp"
             app:cardBackgroundColor="@color/white"
             app:cardElevation="50sp"
             >
             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 android:orientation="vertical"
                 >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="7sp"
                >
                <RadioButton
                    android:layout_width="30sp"
                    android:layout_height="30sp"
                    android:id="@+id/radioBasic_btn"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Basic"
                    android:textSize="20sp"
                    />

            </LinearLayout>
                 <TextView
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:textSize="15sp"
                     android:textStyle="bold"
                     android:paddingStart="42sp"
                     android:text="249/-"/>
             <ImageView
                 android:contentDescription="@string/basicplanimage"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:padding="10sp"
                 android:src="@drawable/basicplanimage"
                 />
             </LinearLayout>
         </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="250sp"
                android:layout_margin="12sp"
                app:cardCornerRadius="15sp"
                app:cardBackgroundColor="@color/white"
                app:cardElevation="50sp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="7sp"
                    >
                    <RadioButton
                        android:layout_width="30sp"
                        android:layout_height="30sp"
                        android:id="@+id/radioPremium_btn"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Premium"
                        android:textSize="20sp"
                        />

                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:paddingStart="42sp"
                    android:text="399/-"/>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10sp"
                    android:src="@drawable/premiumplanimage"
                    />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="250sp"
                android:layout_margin="12sp"
                app:cardCornerRadius="15sp"
                app:cardBackgroundColor="@color/white"
                app:cardElevation="50sp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="7sp"
                    >
                    <RadioButton
                        android:layout_width="30sp"
                        android:layout_height="30sp"
                        android:id="@+id/radioSuper_btn"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Standard"
                        android:textSize="20sp"
                        />

                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:paddingStart="42sp"
                    android:text="678/-"/>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10sp"
                    android:src="@drawable/standardplanimage"
                    />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
          <Button
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:id="@+id/continue_btn"
              android:background="@color/netflixBrandColor"
              android:text="Continue"
              android:textStyle="bold"
              android:layout_margin="12sp"
              />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>