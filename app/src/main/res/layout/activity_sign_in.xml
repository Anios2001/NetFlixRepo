<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/Theme.NetFlix"
    android:background="@color/black"
    tools:context=".Activities.SignInActivity">
    <include android:id="@+id/toolbarID" layout="@layout/netflix_signin_toolbar"
        >
    </include>
    <com.google.android.material.textfield.TextInputLayout

        android:layout_width="match_parent"
        android:layout_marginStart="12sp"
        android:layout_marginEnd="12sp"
        android:layout_height="wrap_content"
        android:id="@+id/emailEditLayout"
        android:theme="@style/Widget.AppCompat.EditText"
        android:background="@drawable/netflix_edittext_design"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        app:boxBackgroundMode="outline"
        android:layout_below="@id/toolbarID"
        android:layout_marginTop="120sp"
        android:padding="5sp"
        >
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="5sp"
            android:layout_margin="4sp"
            android:id="@+id/emailEdittext"
            android:textSize="16sp"
            android:lines="1"
            android:inputType="textEmailAddress"
            android:hint="@string/email"
            android:imeOptions="actionNext"
            android:textColor="@color/white"
            android:textColorHint="#BDB5B5"
            android:background="@color/netflix_editText_color"/>
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/password_layout"
        android:layout_width="match_parent"
        android:layout_marginStart="12sp"
        app:boxBackgroundMode="outline"
        android:layout_marginEnd="12sp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_height="wrap_content"
        android:background="@drawable/netflix_edittext_design"
        android:layout_below="@id/emailEditLayout"
        android:layout_marginTop="20sp"

        android:padding="5sp"
        app:passwordToggleEnabled="true"
         >
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="5sp"
            android:lines="1"
            android:id="@+id/password_editText"
            android:layout_margin="4sp"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:hint="@string/password"
            android:textColorHint="#BDB5B5"
            android:inputType="textPassword"
            android:background="@color/netflix_editText_color"/>
    </com.google.android.material.textfield.TextInputLayout>
    <TextView
        android:id="@+id/forgot_pass_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Forgot Password ? "
        android:textColor="@color/netflix_editText_color"
        android:textStyle="bold"

        android:padding="16sp"
        android:layout_below="@id/password_layout"
        />
    <com.google.android.material.button.MaterialButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/forgot_pass_txt"
        android:layout_margin="18sp"
        android:text="Sign In"
        android:id="@+id/signIn_btn"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:padding="12sp"
        app:strokeColor="@color/white"
        app:strokeWidth="2sp"
        android:theme="@style/Theme.NetFlix.button"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="New to Netflix Sign Up ? "
        android:textColor="@color/netflix_editText_color"
        android:textStyle="bold"
        android:id="@+id/new_user_txt"
        android:layout_below="@id/signIn_btn"
        android:textAlignment="center"
        />
    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/signIn_loading"
        android:layout_below="@id/new_user_txt"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="12sp"
        android:theme="@style/Theme.NetFlix.custom"
        />
</RelativeLayout>